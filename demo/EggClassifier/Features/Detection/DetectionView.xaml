<UserControl x:Class="EggClassifier.Features.Detection.DetectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DesignHeight="680" d:DesignWidth="1060">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 웹캠 영상 -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="&#x1F4F9; 웹캠 영상"
                               FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="{Binding FpsText}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
                </StackPanel>

                <Border Grid.Row="1" Background="#000000" CornerRadius="5">
                    <Image Source="{Binding CurrentFrame}"
                           Stretch="Uniform"/>
                </Border>

                <Border Grid.Row="1"
                        Background="#80000000"
                        CornerRadius="5"
                        Visibility="{Binding OverlayVisibility}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="16"
                                   Foreground="White"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 오른쪽: 컨트롤 패널 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 모델 상태 -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="&#x1F916; 모델 상태"
                               FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="ONNX 모델"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <Border Grid.Column="1"
                                Background="{Binding ModelStatusColor}"
                                CornerRadius="3"
                                Padding="8,3">
                            <TextBlock Text="{Binding ModelStatusText}"
                                       Foreground="White"
                                       FontSize="12"/>
                        </Border>
                    </Grid>

                    <TextBlock Text="{Binding ModelPath}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,5,0,0"
                               ToolTip="{Binding ModelPath}"/>
                </StackPanel>
            </Border>

            <!-- 컨트롤 버튼 -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="&#x2699;&#xFE0F; 컨트롤"
                               FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,10"/>

                    <!-- 카메라 선택 -->
                    <TextBlock Text="카메라 선택"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="&#x1F4F7; 웹캠"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SelectWebcamCommand}"
                                Margin="0,0,5,0"/>
                        <Button Grid.Column="1"
                                Content="&#x1F4F1; 스마트폰"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding SelectPhoneCamera2Command}"
                                Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock Text="{Binding CameraStatusText, StringFormat='선택된 카메라: {0}'}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               Margin="0,0,0,10"
                               TextAlignment="Center"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="&#x25B6; 시작"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Command="{Binding StartCommand}"
                                IsEnabled="{Binding CanStart}"
                                Margin="0,0,5,0"/>
                        <Button Grid.Column="1"
                                Content="&#x23F9; 중지"
                                Style="{StaticResource DangerButtonStyle}"
                                Command="{Binding StopCommand}"
                                IsEnabled="{Binding CanStop}"
                                Margin="5,0,0,0"/>
                    </Grid>

                    <StackPanel Margin="0,15,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="신뢰도 임계값"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ConfidenceThreshold, StringFormat={}{0:P0}}"
                                       Foreground="{StaticResource TextBrush}"/>
                        </Grid>
                        <Slider Minimum="0.1" Maximum="0.9"
                                Value="{Binding ConfidenceThreshold}"
                                TickFrequency="0.1"
                                Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 탐지 결과 -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="&#x1F4CA; 탐지 결과"
                               FontSize="16" FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"
                               Margin="0,0,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ScrollViewer.Resources>
                            <system:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">6</system:Double>
                        </ScrollViewer.Resources>
                        <StackPanel Margin="0,0,10,0">
                            <ItemsControl ItemsSource="{Binding ClassCounts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="12" Height="12"
                                                    CornerRadius="2"
                                                    Background="{Binding Color}"
                                                    Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding ClassName}"
                                                       Foreground="{StaticResource TextBrush}"/>
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Count}"
                                                       Foreground="{StaticResource TextBrush}"
                                                       FontWeight="Bold"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Border Height="1" Background="#444444" Margin="0,10"/>

                            <TextBlock Text="현재 프레임 탐지"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>

                            <ItemsControl ItemsSource="{Binding CurrentDetections}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#3D3D3D"
                                                CornerRadius="4"
                                                Padding="8,5"
                                                Margin="0,0,0,5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Label}"
                                                           Foreground="{StaticResource TextBrush}"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Confidence, StringFormat={}{0:P0}}"
                                                           Foreground="{Binding ConfidenceColor}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="탐지된 객체 없음"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontStyle="Italic"
                                       Visibility="{Binding NoDetectionVisibility}"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 총 탐지 수 -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="총 탐지 수"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding TotalDetections}"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
